<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="ImageStimulusItem">
        <Border BorderBrush="Blue">
            <StackPanel Orientation="Horizontal">
                <Border BorderBrush="Blue" Margin="2" >
                    <TextBox Text="{Binding Id}"/>
                </Border>
                <Border BorderBrush="Blue" Margin="2" >
                    <TextBox Text="{Binding ImageSize.Width, StringFormat='0.0'}"/>
                </Border>
                <Border BorderBrush="Blue" Margin="2" >
                    <TextBox Text="{Binding ImageSize.Height, StringFormat='0.0'}"/>
                </Border>
                <Border BorderBrush="Blue" Margin="2" >
                    <Image Source="{Binding StimulusObject}" Stretch="Fill"
                           Height="{Binding Source={StaticResource appSettings}, Path=ImagePreviewHeight}"/>
                </Border>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>