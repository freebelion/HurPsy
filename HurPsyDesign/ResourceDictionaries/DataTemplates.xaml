<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="2" />
    </Style>
    <Style TargetType="Image">
        <Setter Property="Margin" Value="2" />
    </Style>

    <DataTemplate x:Key="ImageStimulusTemplate">
        <StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding Id}"/>
            <TextBox Text="{Binding ImageSize.Width, StringFormat='0.0'}"/>
            <TextBox Text="{Binding ImageSize.Height, StringFormat='0.0'}"/>
            <Image Source="{Binding StimulusObject}" Stretch="Fill"
                   Height="24"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="PointLocatorTemplate">
        <StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding Id}"/>
            <TextBox Text="{Binding LocatorPoint.X, StringFormat='0.0'}"/>
            <TextBox Text="{Binding LocatorPoint.Y, StringFormat='0.0'}"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>