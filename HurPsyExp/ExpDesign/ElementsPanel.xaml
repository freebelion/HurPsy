<UserControl x:Class="HurPsyExp.ExpDesign.ElementsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HurPsyExp.ExpDesign"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ControlTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <SolidColorBrush x:Key="ElementsPanelBrush" Color="Azure"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <ContentControl Template="{StaticResource HorizontallySizableControl}">
        <ContentControl.Content>
            <DockPanel Background="{StaticResource ElementsPanelBrush}">
                
            </DockPanel>
        </ContentControl.Content>
    </ContentControl>
</UserControl>
