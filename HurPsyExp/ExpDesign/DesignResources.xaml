<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Control}">
        <Setter Property="FontSize"
                        Value="{Binding Source={StaticResource UserPreferences}, Path=UIFontSize}"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="2" />
    </Style>

    <Style TargetType="Image">
        <Setter Property="Margin" Value="2" />
    </Style>

    <Style TargetType="ListBox">
        <Setter Property="Margin" Value="2" />
    </Style>

    <Style TargetType="ListBoxItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
        <Setter Property="Margin" Value="0,0,0,2" />
    </Style>

    <Style x:Key="CommandButton" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Height"
                        Value="{Binding Source={StaticResource UserPreferences}, Path=CommandButtonHeight}"/>
    </Style>

    <Style x:Key="CommandBar" TargetType="{x:Type StackPanel}">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="SteelBlue"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>