<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <LinearGradientBrush x:Key="ItemDisplayBackground"
                         StartPoint="0.0,0.5" EndPoint="1.0,0.5">
        <GradientStop Color="Cyan" Offset="0.0"/>
        <GradientStop Color="DarkCyan" Offset="0.25"/>
        <GradientStop Color="DarkCyan" Offset="0.75"/>
        <GradientStop Color="Cyan" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ItemEditBackground"
                     StartPoint="0.0,0.5" EndPoint="1.0,0.5">
        <GradientStop Color="LightBlue" Offset="0.0"/>
        <GradientStop Color="SteelBlue" Offset="0.25"/>
        <GradientStop Color="SteelBlue" Offset="0.75"/>
        <GradientStop Color="LightBlue" Offset="1.0"/>
    </LinearGradientBrush>
</ResourceDictionary>